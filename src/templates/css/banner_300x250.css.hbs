svg#{{logo.id}}{
	right: 16px;
	bottom: 39px;
	width: 70px;
	height: auto;
}

/* N-Window Images */
image{
	width: {{width}}px;
	height: auto;
}

/* N-Graphic Imgs */
img.pic-front, img.pic-back{
	top: 0; 
	left: 0;
	width: {{width}}px;
	height: {{height}}px;
}
svg#n-graphic{
	bottom: 43px;
	left: 50%;
	transform: translateX(-50%);
	width: 209px;
	height: auto;
}
/* Positioning */

.txt-container{
	top: 0;
	left:0;
	width: 100%;
	height: 100%;
}

#end-container, #nw-t1-container{
	width: 300px;
	height: 250px;
	top: 0;
	left: 0;
}
#end-container{
	background-color: var(--vibrantblue);
}
#end-container #end-stripe{
	background-color: var(--darkblue);
	clip-path: polygon(0% 0%, 66% 0%, 100% 100%, 33% 100%); /* parallel shape */
	-webkit-clip-path: polygon(0% 0%, 66% 0%, 100% 100%, 33% 100%); 
	width: 300%;
	height: 100%;
}

#ribbon{
	background-color: var(--mediumblue);
	bottom: 0px;
	left: 0;
	display: block;
	position: absolute;
	width: auto;
	clip-path: polygon(0% 0%, calc(100% - {{ribbon.singleLineHeight}}px) 0%, 100% 100%, 0% 100%);
	height: auto;
}

/* Text Styles */

#ribbon #ribbon-txt{
	color: white;
	font-weight: 700;
	font-size: 12px;
	line-height: 14px;
	letter-spacing:0px;
	padding: 3px 25px 3px 8px;
	white-space: pre-line;
}

.t1{
	color: white;
	font-family: 'tiempos-headline', Georgia, Garamond, serif;
	font-weight: 600;
	letter-spacing:0;
	text-align:left;
	width: 265px;
}

#t1{
	font-size: 24px;
	line-height: 26px;
	padding: 16px 0px 15px 19px;
}

#nw-t1{
	font-size: 18px;
	line-height: 20px;
	top: 125px;
	padding: 11px 0px 15px 19px;
}

/* end-txt */

#t2{
	color: white;
	font-weight: 600;
	font-size: 20px;
	line-height: 22px;
	letter-spacing:0;
	padding: 15px 0px 11px 20px;
	width: 263px;
}

/* CTA */

#cta-container{
	display: inline-block;
	padding: 0px 19px;
}
#cta {
	background-color:var(--mintgreen);
	height: 20px;
	padding: 0px 15px;
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
}
#cta-txt {
	color: var(--darkblue);
	display: block;
	font-family: proxima-nova, Arial, sans-serif;
	font-weight: 600;
	font-style: normal;
	font-size: 11px;
	line-height: 13px;
	position: relative;
	white-space: nowrap;
	width: auto;
}

/* Replay Btn */

.replay {
	top: 0;
	left: 0;
}
#replay-container {
	width: 30px;
	height: 30px;
	cursor: pointer;
	visibility: hidden;
}
svg#replaySvg{
	display: inline-block;
	position: absolute;
	width: 14px;
	height: 14px;
	left: 5px;
	top: 5px;
	opacity: 0.7;
}
