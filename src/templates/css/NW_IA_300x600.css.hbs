{{> global.css }}

img#logo{
	right: 18px;
	height: 79px;
	width: auto;
	/*object-fit: contain;*/
}
img.logo-no-ribbon{bottom: 18px}
img.logo-over-ribbon{bottom: 40px}

/* N-Crop Images */
image{
	top: 0; left: 0;
	width: {{width}}px;
	height: auto;
	/*object-fit:contain;*/
}

/* N-Graphic Imgs */
img.pic-front, img.pic-back{
	top: 0; left: 0;
	width: {{width}}px;
	height: 300px;
}

svg#n-graphic{
	top: 49px;
	left: 31px;
	width: 238px;
	height: auto;
}

/* Stripe */

.stripe{
	background-color: var(--darkblue);
	position: absolute;
	width: 100%;
}

.nc-stripe{
	-webkit-clip-path: polygon(92px 0%, 239px 0%, 0% 240px, 0% 94px);
	clip-path: polygon(92px 0%, 239px 0%, 0% 240px, 0% 94px);
	height: 100%;
}
.ng-stripe, .to-stripe{
	-webkit-clip-path: polygon(100% 70px, 100% 216px, 0% 515px, 0% 369px);
	clip-path: polygon(100% 70px, 100% 216px, 0% 515px, 0% 369px); 
	height: {{height}}px;
}
.ng-stripe{
	top: -300px;
}

